{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://kyandori.github.io/json_schema/schemas/defs/properties.json",
    "title": "Properties",
    "description": "プロパティの汎用定義",
    "$comment": "$defs内の各要素を$refで参照して利用してください。",
    "$defs": {
        "id": {
            "uuid": {
                "title": "UUID",
                "description": "UUID",
                "type": "string",
                "format": "uuid"
            }
        },
        "name": {
            "$comment": "title(例： \"title\": \"名称\"), description(例： \"description\": \"会社名\"), example(例： \"example\": \"株式会社山田商会\")等を指定し、利用してください。",
            "type": "string"
        },
        "nameKana": {
            "$comment": "title(例： \"title\": \"名称（フリガナ）\"), description(例： \"description\": \"会社名のフリガナ\"), example(例： \"example\": \"カブシキガイシャヤマダショウカイ\")等を指定し、利用してください。",
            "type": "string",
            "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/kana"
        },
        "structuredName": {
            "description": "姓・名の分割及びフリガナに対応した名前のプロパティ",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "title": "名前",
                    "description": "人の名前",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "firstName": {
                            "title": "名",
                            "description": "ファーストネーム",
                            "example": "太郎",
                            "$ref": "#/$defs/name"
                        },
                        "lastName": {
                            "title": "姓",
                            "description": "ラストネーム",
                            "example": "山田",
                            "$ref": "#/$defs/name"
                        }
                    },
                    "required": [
                        "firstName",
                        "lastName"
                    ]
                },
                "nameKana": {
                    "title": "名前（フリガナ）",
                    "description": "人の名前のフリガナ",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "firstName": {
                            "title": "メイ",
                            "description": "ファーストネームのフリガナ",
                            "type": "string",
                            "example": "タロウ",
                            "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/kanaStrict"
                        },
                        "lastName": {
                            "title": "セイ",
                            "description": "ラストネームのフリガナ",
                            "type": "string",
                            "example": "ヤマダ",
                            "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/kanaStrict"
                        }
                    },
                    "required": [
                        "firstName",
                        "lastName"
                    ]
                }
            },
            "required": [
                "name",
                "nameKana"
            ]
        },
        "location": {
            "postalCode": {
                "title": "PostalCode",
                "description": "postal code",
                "type": "string",
                "example": "1140034",
                "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/postalCode"
            },
            "address": {
                "title": "Address",
                "description": "address",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "prefecture": {
                        "title": "Prefecture",
                        "description": "prefecture",
                        "type": "string",
                        "$ref": "https://kyandori.github.io/json_schema/schemas/defs/enums.json#/$defs/prefecture"
                    },
                    "city": {
                        "title": "City",
                        "description": "city",
                        "type": "string",
                        "example": "川崎市多摩区",
                        "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/city"
                    },
                    "district": {
                        "title": "District",
                        "description": "district",
                        "type": "string",
                        "example": "西生田"
                    },
                    "subdistrict": {
                        "title": "Subdistrict",
                        "description": "subdistrict",
                        "type": "string",
                        "example": "3",
                        "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/subdistrict"
                    },
                    "streetAddress": {
                        "title": "StreetAddress",
                        "description": "street address",
                        "type": "string",
                        "example": "3-15",
                        "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/streetAddress"
                    },
                    "buildingNameRoomNumber": {
                        "title": "BuildingNameRoomNumber",
                        "description": "building name, room number",
                        "type": "string",
                        "example": "吉田マンション 105号室"
                    }
                },
                "required": [
                    "prefecture",
                    "city",
                    "district",
                    "streetAddress"
                ]
            } 
        },
        "telephoneNumber": {
            
        },
        "mail": {
            
        },
        "latLong": {
            
        }
    }
}
