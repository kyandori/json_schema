{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://kyandori.github.io/json_schema/schemas/defs/properties.json",
    "title": "Properties",
    "description": "プロパティの汎用定義",
    "$comment": "$defs内の各要素を$refで参照して利用してください。",
    "$defs": {
        "id": {
            "uuid": {
                "title": "UUID",
                "description": "ID",
                "type": "string",
                "format": "uuid"
            }
        },
        "name": {
            "combinedName": {
                "title": "UnstructuredName",
                "description": "名称・名前",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "title": "Name",
                        "description": "name",
                        "type": "string",
                        "example": "山田　太郎"
                    },
                    "nameKana": {
                        "title": "NameKana",
                        "description": "name kana",
                        "type": "string",
                        "example": "ヤマダ タロウ",
                        "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/kana"
                    }
                },
                "required": [
                    "name",
                    "nameKana"
                ]
            },
            "structuredName": {
                "title": "StructuredName",
                "description": "structured name",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "title": "Name",
                        "description": "name",
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "firstName": {
                                "title": "FirstName",
                                "description": "first name",
                                "type": "string",
                                "example": "太郎"
                            },
                            "lastName": {
                                "title": "LastName",
                                "description": "last name",
                                "type": "string",
                                "example": "山田"
                            }
                        },
                        "required": [
                            "firstName",
                            "lastName"
                        ]
                    },
                    "nameKana": {
                        "title": "NameKana",
                        "description": "name kana",
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "firstName": {
                                "title": "FirstName",
                                "description": "first name",
                                "type": "string",
                                "example": "タロウ",
                                "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/kanaStrict"
                            },
                            "lastName": {
                                "title": "LastName",
                                "description": "last name",
                                "type": "string",
                                "example": "ヤマダ",
                                "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/kanaStrict"
                            }
                        },
                        "required": [
                            "firstName",
                            "lastName"
                        ]
                    }
                },
                "required": [
                    "name",
                    "nameKana"
                ]
            }
        },
        "location": {
            "postalCode": {
                "title": "PostalCode",
                "description": "postal code",
                "type": "string",
                "example": "1140034",
                "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/postalCode"
            },
            "address": {
                "title": "Address",
                "description": "address",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "prefecture": {
                        "title": "Prefecture",
                        "description": "prefecture",
                        "type": "string",
                        "$ref": "https://kyandori.github.io/json_schema/schemas/defs/enums.json#/$defs/prefecture"
                    },
                    "city": {
                        "title": "City",
                        "description": "city",
                        "type": "string",
                        "example": "川崎市多摩区",
                        "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/city"
                    },
                    "district": {
                        "title": "District",
                        "description": "district",
                        "type": "string",
                        "example": "西生田"
                    },
                    "subdistrict": {
                        "title": "Subdistrict",
                        "description": "subdistrict",
                        "type": "string",
                        "example": "3",
                        "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/subdistrict"
                    },
                    "streetAddress": {
                        "title": "StreetAddress",
                        "description": "street address",
                        "type": "string",
                        "example": "3-15",
                        "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/streetAddress"
                    },
                    "buildingNameRoomNumber": {
                        "title": "BuildingNameRoomNumber",
                        "description": "building name, room number",
                        "type": "string",
                        "example": "吉田マンション 105号室"
                    }
                },
                "required": [
                    "prefecture",
                    "city",
                    "district",
                    "streetAddress"
                ]
            } 
        },
        "telephoneNumber": {
            
        },
        "mail": {
            
        },
        "latLong": {
            
        }
    }
}
