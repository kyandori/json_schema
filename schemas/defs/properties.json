{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://kyandori.github.io/json_schema/schemas/defs/properties.json",
    "title": "CommonPropertyDefinitions",
    "description": "システム全体で利用される共通プロパティ定義集（氏名、住所、連絡先など）",
    "$comment": "$defs内の各要素を$refで参照して利用してください。",
    "$defs": {
        "id": {
            "uuid": {
                "title": "UUID",
                "description": "一意の識別子 (UUID v4形式)",
                "type": "string",
                "format": "uuid"
            }
        },
        "name": {
            "$comment": "汎用的な名称定義。利用時にtitle等をオーバーライドしてください。",
            "title": "名称",
            "description": "一般的な名称文字列",
            "type": "string"
        },
        "nameKana": {
            "$comment": "汎用的なフリガナ定義。利用時にtitle等をオーバーライドしてください。",
            "title": "フリガナ",
            "description": "全角カタカナによる名称の読み仮名",
            "type": "string",
            "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/kana"
        },
        "structuredName": {
            "title": "氏名情報（構造化）",
            "description": "姓名分割およびフリガナを含む詳細な氏名情報",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "title": "氏名（漢字）",
                    "description": "漢字表記の氏名セット",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "firstName": {
                            "title": "名",
                            "description": "個人名（ファーストネーム）",
                            "example": "太郎",
                            "$ref": "#/$defs/name"
                        },
                        "lastName": {
                            "title": "姓",
                            "description": "氏族名（ラストネーム）",
                            "example": "山田",
                            "$ref": "#/$defs/name"
                        }
                    },
                    "required": [
                        "firstName",
                        "lastName"
                    ]
                },
                "nameKana": {
                    "title": "氏名（フリガナ）",
                    "description": "全角カタカナ表記の氏名セット",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "firstName": {
                            "title": "メイ",
                            "description": "個人名のフリガナ",
                            "type": "string",
                            "example": "タロウ",
                            "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/kanaStrict"
                        },
                        "lastName": {
                            "title": "セイ",
                            "description": "氏族名のフリガナ",
                            "type": "string",
                            "example": "ヤマダ",
                            "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/kanaStrict"
                        }
                    },
                    "required": [
                        "firstName",
                        "lastName"
                    ]
                }
            },
            "required": [
                "name",
                "nameKana"
            ]
        },
        "location": {
            "postalCode": {
                "title": "郵便番号",
                "type": "string",
                "example": "1140034",
                "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/postalCode"
            },
            "address": {
                "title": "所在地",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "prefecture": {
                        "title": "都道府県名",
                        "description": "所在地の都道府県名",
                        "allOf": [
                            {
                                "$ref": "#/$defs/name"
                            },
                            {
                                "$ref": "https://kyandori.github.io/json_schema/schemas/defs/enums.json#/$defs/prefecture"
                            }
                        ]
                    },
                    "city": {
                        "title": "市区町村名",
                        "description": "所在地の市区町村名",
                        "example": "川崎市多摩区",
                        "allOf": [
                            {
                                "$ref": "#/$defs/name"
                            },
                            {
                                "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/city"
                            }
                        ]
                    },
                    "district": {
                        "title": "町域",
                        "description": "所在地の町域",
                        "example": "西生田",
                        "$ref": "#/$defs/name"
                    },
                    "subdistrict": {
                        "title": "丁目",
                        "description": "所在地の丁目",
                        "example": "3",
                        "type": "string",
                        "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/subdistrict"
                    },
                    "streetAddress": {
                        "title": "以降所在地",
                        "description": "丁目以降の所在地",
                        "$comment": "**丁目がない場合**は町域以降の所在地",
                        "type": "string",
                        "example": "3-15",
                        "$ref": "https://kyandori.github.io/json_schema/schemas/defs/patterns.json#/$defs/streetAddress"
                    },
                    "buildingNameRoomNumber": {
                        "title": "建物名・部屋番号",
                        "description": "建物名、部屋番号またはフロア",
                        "example": "吉田マンション 105号室",
                        "$ref": "#/$defs/name"
                    }
                },
                "required": [
                    "prefecture",
                    "city",
                    "district",
                    "streetAddress"
                ]
            }
        },
        "telephoneNumber": {
            
        },
        "mail": {
            
        },
        "latLong": {
            
        }
    }
}
