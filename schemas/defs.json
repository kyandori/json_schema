{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://kyandori.github.io/json_schema/schemas/defs.json",
    "title": "Defs",
    "$comment": "定義ファイル。$defs内の各要素を$refで参照して利用してください。",
    "$defs": {
        "$comment": "▼ id",
        "uuid": {
            "title": "UUID",
            "description": "uuid",
            "type": "string",
            "format": "uuid"
        },
        "$comment":"▼ name",
        "fullName": {
            "title": "FullName",
            "description": "full name",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "title": "Name",
                    "description": "name",
                    "type": "string",
                    "example": "山田　太郎"
                },
                "nameKana": {
                    "title": "NameKana",
                    "description": "name kana",
                    "type": "string",
                    "example": "ヤマダ タロウ",
                    "pattern": "^[ァ-ヴー\\s　]+$"
                }
            },
            "required": [
                "name",
                "nameKana"
            ]
        },
        "structuredName": {
            "title": "StructuredName",
            "description": "structured name",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "firstName": {
                    "title": "FirstName",
                    "description": "first name",
                    "type": "string",
                    "example": "太郎"
                },
                "lastName": {
                    "title": "LastName",
                    "description": "last name",
                    "type": "string",
                    "example": "山田"
                },
                "firstNameKana": {
                    "title": "FirstNameKana",
                    "description": "first name kana",
                    "type": "string",
                    "example": "タロウ",
                    "pattern": "^[ァ-ヴー]+$"
                },
                "lastNameKana": {
                    "title": "LastNameKana",
                    "description": "last name kana",
                    "type": "string",
                    "example": "ヤマダ",
                    "pattern": "^[ァ-ヴー]+$"
                }
            },
            "required": [
                "firstName",
                "lastName",
                "firstNameKana",
                "lastNameKana"
            ]
        }
    }
}
