{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://kyandori.github.io/json_schema/schemas/defs.json",
    "title": "Defs",
    "$comment": "定義ファイル。$defs内の各要素を$refで参照して利用してください。",
    "$defs": {
        "id": {
            "uuid": {
                "title": "UUID",
                "description": "uuid",
                "type": "string",
                "format": "uuid"
            }
        },
        "name": {
            "fullName": {
                "title": "FullName",
                "description": "full name",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "title": "Name",
                        "description": "name",
                        "type": "string",
                        "example": "山田　太郎"
                    },
                    "nameKana": {
                        "title": "NameKana",
                        "description": "name kana",
                        "type": "string",
                        "example": "ヤマダ タロウ",
                        "$ref": "#/$defs/patterns/kana"
                    }
                },
                "required": [
                    "name",
                    "nameKana"
                ]
            },
            "structuredName": {
                "title": "StructuredName",
                "description": "structured name",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "firstName": {
                        "title": "FirstName",
                        "description": "first name",
                        "type": "string",
                        "example": "太郎"
                    },
                    "lastName": {
                        "title": "LastName",
                        "description": "last name",
                        "type": "string",
                        "example": "山田"
                    },
                    "firstNameKana": {
                        "title": "FirstNameKana",
                        "description": "first name kana",
                        "type": "string",
                        "example": "タロウ",
                        "$ref": "#/$defs/patterns/kanaStrict"
                    },
                    "lastNameKana": {
                        "title": "LastNameKana",
                        "description": "last name kana",
                        "type": "string",
                        "example": "ヤマダ",
                        "$ref": "#/$defs/patterns/kanaStrict"
                    }
                },
                "required": [
                    "firstName",
                    "lastName",
                    "firstNameKana",
                    "lastNameKana"
                ]
            }
        },
        "location": {
            "postalCode": {
                "title": "PostalCode",
                "description": "postal code",
                "type": "string",
                "example": "1140034",
                "$ref": "#/$defs/patterns/postalCode"
            },
            "address": {
                "title": "Address",
                "description": "address",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "prefecture": {
                        "title": "Prefecture",
                        "description": "prefecture",
                        "type": "string",
                        "enum": [
                            "北海道","青森県","岩手県","宮城県","秋田","山形県",
                            "福島県","茨城県","栃木県","群馬県","埼玉県","千葉県",
                            "東京都","神奈川県","新潟県","富山県","石川県","福井県",
                            "山梨県","長野県","岐阜県","静岡県","愛知県","三重県",
                            "滋賀県","京都府","大阪府","兵庫県","奈良県","和歌山県",
                            "鳥取県","島根県","岡山県","広島県","山口県","徳島県",
                            "香川県","愛媛県","高知県","福岡県","佐賀県","長崎県",
                            "熊本県","大分県","宮崎県","鹿児島県","沖縄県"
                        ]
                    },
                    "city": {
                        "title": "City",
                        "description": "city",
                        "type": "string",
                        "example": "川崎市多摩区",
                        "$ref": "#/$defs/patterns/city"
                    },
                    "district": {
                        "title": "District",
                        "description": "district",
                        "type": "string",
                        "example": "西生田"
                    },
                    "subdistrict": {
                        "title": "Subdistrict",
                        "description": "subdistrict",
                        "type": "string",
                        "example": "3",
                        "maxLength": 2,
                        "$ref": "#/$defs/patterns/subdistrict"
                    },
                    
                },
                "required": [
                    "prefecture",
                    "city",
                    "district",
                    "addressRemaining"
                ]
            }
        },







            
            
            
                
                
                "addressRemaining": {
                    "title": "AddressRemaining",
                    "description": "address remaining",
                    "type": "string",
                    "example": "3-15",
                    "pattern": "^[1-9][0-9-]*$"
                },
                "roomNumber": {
                    "title": "RoomNumber",
                    "description": "room number",
                    "type": "string",
                    "example": "吉田マンション 105号室"
                }
        },
        "telephoneNumber": {
            
        },
        "mail": {
            
        },
        "latLong": {
            
        },
        "patterns": {
            "kana": {
                "$comment": "カタカナと長音、スペースを許容",
                "pattern": "^[ァ-ヴー\\s　]+$"
            },
            "kanaStrict": {
                "$comment": "カタカナと長音のみ（スペース不可）",
                "pattern": "^[ァ-ヴー]+$"
            },
            "city": {
                "pattern": "^.+?[市区町村]$"
            },
            "subdistrict": {
                "pattern": "^[0-9]+$"
            },
            "tel": {
                "pattern": "^(0[1-9][0-9]{8}|050[0-9]{8}|0[6-9]0[0-9]{8})$"
            },
            "telMobile": {
                "pattern": "^0[6-9]0[0-9]{8}$"
            },
            "telFixed": {
                "pattern": "^(0[1-9][0-9]{8}|050[0-9]{8})$"
            },
            "postalCode": {
                "pattern": "^[0-9]{7}$"
            }
        }
    }
}
