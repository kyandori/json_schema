{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://kyandori.github.io/json_schema/schemas/defs.json",
    "title": "Defs",
    "$comment": "定義ファイル。$defs内の各要素を$refで参照して利用してください。",
    "$defs": {
        "id": {
            "uuid": {
                "title": "UUID",
                "description": "uuid",
                "type": "string",
                "format": "uuid"
            }
        },
        "name": {
            "fullName": {
                "title": "FullName",
                "description": "full name",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "title": "Name",
                        "description": "name",
                        "type": "string",
                        "example": "山田　太郎"
                    },
                    "nameKana": {
                        "title": "NameKana",
                        "description": "name kana",
                        "type": "string",
                        "example": "ヤマダ タロウ",
                        "$ref": "#/$defs/patterns/kana"
                    }
                },
                "required": [
                    "name",
                    "nameKana"
                ]
            },
            "structuredName": {
                "title": "StructuredName",
                "description": "structured name",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "firstName": {
                        "title": "FirstName",
                        "description": "first name",
                        "type": "string",
                        "example": "太郎"
                    },
                    "lastName": {
                        "title": "LastName",
                        "description": "last name",
                        "type": "string",
                        "example": "山田"
                    },
                    "firstNameKana": {
                        "title": "FirstNameKana",
                        "description": "first name kana",
                        "type": "string",
                        "example": "タロウ",
                        "$ref": "#/$defs/patterns/kanaStrict"
                    },
                    "lastNameKana": {
                        "title": "LastNameKana",
                        "description": "last name kana",
                        "type": "string",
                        "example": "ヤマダ",
                        "$ref": "#/$defs/patterns/kanaStrict"
                    }
                },
                "required": [
                    "firstName",
                    "lastName",
                    "firstNameKana",
                    "lastNameKana"
                ]
            }
        },
        "patterns": {
            "kana": {
                "type": "string",
                "$comment": "カタカナと長音、スペースを許容",
                "pattern": "^[ァ-ヴー\\s　]+$"
            },
            "kanaStrict": {
                "type": "string",
                "$comment": "カタカナと長音のみ（スペース不可）",
                "pattern": "^[ァ-ヴー]+$"
            },
            "tel": {
                "type": "string",
                "pattern": "^(0[1-9][0-9]{8}|050[0-9]{8}|0[6-9]0[0-9]{8})$"
            },
            "telMobile": {
                "type": "string",
                "pattern": "^0[6-9]0[0-9]{8}$"
            },
            "telFixed": {
                "type": "string",
                "pattern": "^(0[1-9][0-9]{8}|050[0-9]{8})$"
            },
            "postalCode": {
                "type": "string",
                "pattern": "^[0-9]{7}$"
            }
        }
    }
}
