{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://kyandori.github.io/json_schema/schemas/common.json",
    "title": "CommonItems",
    
    "$defs": {
        "uuid": {
            "title": "UUID",
            "description": "uuid",
            "type": "string",
            "format": "uuid"
        },
        "name": {
            "title": "Name",
            "description": "name",
            "type": "string",
            "example": "山田太郎"
        },
        "nameKana": {
            "title": "NameKana",
            "description": "name kana",
            "type": "string",
            "example": "ヤマダタロウ",
            "pattern": "^[ァ-ヴー]+$"
        },
        "nameSetSplit": {
            "title": "NameSetSplit",
            "description": "name set split",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "firstName": {
                    "title": "FirstName",
                    "description": "first name",
                    "type": "string",
                    "example": "太郎"
                },
                "lastName": {
                    "title": "LastName",
                    "description": "last name",
                    "type": "string",
                    "example": "山田"
                },
                "firstNameKana": {
                    "title": "FirstNameKana",
                    "description": "first name kana",
                    "type": "string",
                    "example": "タロウ",
                    "pattern": "^[ァ-ヴー]+$"
                },
                "lastNameKana": {
                    "title": "LastNameKana",
                    "description": "last name kana",
                    "type": "string",
                    "example": "ヤマダ",
                    "pattern": "^[ァ-ヴー]+$"
                }
            },
            "required": [
                "firstName",
                "lastName",
                "firstNameKana",
                "lastNameKana"
            ]
        },
        "phoneNumber": {
            "title": "PhoneNumber",
            "description": "phone number",
            "type": "string",
            "example": "09043219876",
            "pattern": "^(0[1-9][0-9]{8}|050[0-9]{8}|0[789]0[0-9]{8})$",
            "minLength": 10,
            "maxLength": 11
        },
        "phoneNumberSet": {
            "title": "PhoneNumberSet",
            "description": "phone number set",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "mobile": {
                    "title": "Mobile",
                    "description": "mobile",
                    "$comment": "**11-digit mobile phone number string without hyphens**",
                    "type": "string",
                    "example": "09043219876",
                    "pattern": "^0[789]0[0-9]{8}$",
                    "minLength": 11,
                    "maxLength": 11
                },
                "phone": {
                    "title": "Phone",
                    "description": "phone",
                    "$comment": "**10-digit or 11-digit phone number string without hyphens**",
                    "type": "string",
                    "example": "0343219876",
                    "pattern": "^(0[1-9][0-9]{8}|050[0-9]{8})$",
                    "minLength": 10,
                    "maxLength": 11
                }
            },
            "anyOf": [
                {
                    "required": [
                        "mobile"
                    ]
                },
                {
                    "required": [
                        "phone"
                    ]
                }
            ]
        },
        "address": {
            "title": "Address",
            "description": "address",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "postalCode": {
                    "title": "PostalCode",
                    "description": "postal code",
                    "type": "string",
                    "example": "1140034",
                    "pattern": "^[0-9]{7}$"
                },
                "prefecture": {
                    "title": "Prefecture",
                    "description": "prefecture",
                    "type": "string",
                    "enum": [
                        "北海道",
                        "青森県",
                        "岩手県",
                        "宮城県",
                        "秋田県",
                        "山形県",
                        "福島県",
                        "茨城県",
                        "栃木県",
                        "群馬県",
                        "埼玉県",
                        "千葉県",
                        "東京都",
                        "神奈川県",
                        "新潟県",
                        "富山県",
                        "石川県",
                        "福井県",
                        "山梨県",
                        "長野県",
                        "岐阜県",
                        "静岡県",
                        "愛知県",
                        "三重県",
                        "滋賀県",
                        "京都府",
                        "大阪府",
                        "兵庫県",
                        "奈良県",
                        "和歌山県",
                        "鳥取県",
                        "島根県",
                        "岡山県",
                        "広島県",
                        "山口県",
                        "徳島県",
                        "香川県",
                        "愛媛県",
                        "高知県",
                        "福岡県",
                        "佐賀県",
                        "長崎県",
                        "熊本県",
                        "大分県",
                        "宮崎県",
                        "鹿児島県",
                        "沖縄県"
                    ]
                },
                "city": {
                    "title": "City",
                    "description": "city",
                    "type": "string",
                    "example": "川崎市多摩区",
                    "pattern": "^(?:旭川|伊達|石狩|盛岡|奥州|田村|南相馬|那須塩原|東村山|武蔵村山|羽村|十日町|上越|富山|野々市|大町|蒲郡|四日市|姫路|大和郡山|廿日市|下松|岩国|田川|大村)市|.+?郡(?:玉村|大町|.+?)[町村]|.+?市.+?区|.+?[市区町村]$"
                },
                "district": {
                    "title": "District",
                    "description": "district",
                    "type": "string",
                    "example": "西生田"
                },
                "chome": {
                    "title": "Chome",
                    "description": "chome",
                    "type": "string",
                    "example": "3",
                    "pattern": "^([1-9]|[1-3][0-9]|4[0-2])$",
                    "maxLength": 2
                },
                "addressRemaining": {
                    "title": "AddressRemaining",
                    "description": "address remaining",
                    "type": "string",
                    "example": "3-15",
                    "pattern": "^[1-9][0-9-]*$"
                },
                "roomNumber": {
                    "title": "RoomNumber",
                    "description": "room number",
                    "type": "string",
                    "example": "吉田マンション 105号室"
                }
            },
            "required": [
                "postalCode",
                "prefecture",
                "city",
                "district",
                "addressRemaining"
            ]
        },
        "latLong": {
            "title": "LatLong",
            "description": "lat long",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "latitude": {
                    "title": "Latitude",
                    "description": "latitude",
                    "type": "number",
                    "minimum": -90,
                    "maximum": 90
                },
                "longitude": {
                    "title": "Longitude",
                    "description": "longitude",
                    "type": "number",
                    "minimum": -180,
                    "maximum": 180
                }
            },
            "required": [
                "latitude",
                "longitude"
            ]
        }
      
    }
}
